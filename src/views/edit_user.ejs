<nav class="navbar navbar-dark bg-dark">
  <a href="/" class="navbar-brand">CRUD CON NODE.JS</a>
</nav>

<div class="container nt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/update/<%= data.id %>" method="post">
            <div class="form-group">
              <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="direccion" value="<%= data.direccion %>" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="telefono" value="<%= data.telefono %>" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Actualizar </button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

</body>
</html>
